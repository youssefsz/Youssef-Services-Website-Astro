---
const currentYear = new Date().getFullYear();
import BlurFade from "../animations/BlurFade";
---

<footer class="py-20 relative border-t border-white/5">
    <div class="container-main">
        <!-- Centered Large Name with Hover Effect -->
        <div class="text-center mb-12">
            <BlurFade client:visible delay={200} yOffset={20}>
                <h2 class="display-xl inline-block footer-name">
                    <!-- First name with smooth transition using global hover class -->
                    <span class="text-outline-hover">
                        <span class="outline-text">Youssef</span>
                        <span class="filled-text" aria-hidden="true"
                            >Youssef</span
                        >
                    </span>
                    <span class="block">Dhibi</span>
                </h2>
            </BlurFade>
        </div>

        <!-- Social Icons Row -->
        <div class="flex flex-wrap items-center justify-center gap-4 mb-12">
            <!-- GitHub -->
            <a
                href="https://github.com/youssefsz"
                target="_blank"
                rel="noopener"
                class="w-12 h-12 border border-white/10 flex items-center justify-center hover:border-accent hover:text-accent transition-all duration-200"
                aria-label="GitHub"
            >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
