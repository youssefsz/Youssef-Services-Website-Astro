---
// Navbar Component - Clean minimal navigation
---

<nav
    class="fixed top-0 left-0 right-0 z-50 bg-black/80 backdrop-blur-md border-b border-white/5"
>
    <div class="container-main">
        <div class="flex items-center justify-between h-20">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-3 group" id="nav-logo">
                <div class="w-2 h-2 bg-accent"></div>
                <span
                    class="font-display font-bold text-sm uppercase tracking-widest"
                >
                    Youssef Dhibi
                </span>
            </a>

            <!-- Navigation Links - Desktop -->
            <div class="hidden md:flex items-center gap-8">
                <a
                    href="#services"
                    class="link-hover text-sm uppercase tracking-wider font-medium"
                    id="nav-services"
                >
                    Services
                </a>
                <a
                    href="#contact"
                    class="link-hover text-sm uppercase tracking-wider font-medium"
                    id="nav-contact"
                >
                    Contact
                </a>
            </div>

            <!-- CTA Button -->
            <a
                href="#services"
                class="btn-secondary hidden md:inline-flex text-xs py-3 px-6"
                id="nav-cta"
            >
                Explore Services
            </a>

            <!-- Mobile Menu Button -->
            <button
                class="md:hidden w-10 h-10 flex items-center justify-center border border-white/10"
                id="mobile-menu-btn"
                aria-label="Toggle menu"
            >
                <div class="space-y-1.5">
                    <span
                        class="block w-5 h-0.5 bg-white transition-all"
                        id="menu-line-1"></span>
                    <span
                        class="block w-5 h-0.5 bg-white transition-all"
                        id="menu-line-2"></span>
                </div>
            </button>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div
        class="md:hidden hidden absolute top-full left-0 right-0 bg-black border-b border-white/5"
        id="mobile-menu"
    >
        <div class="container-main py-8 space-y-6">
            <a
                href="#services"
                class="block text-lg uppercase tracking-wider font-medium text-muted hover:text-white transition-colors"
            >
                Services
            </a>
            <a
                href="#contact"
                class="block text-lg uppercase tracking-wider font-medium text-muted hover:text-white transition-colors"
            >
                Contact
            </a>
            <a href="#services" class="btn-primary w-full text-center mt-4">
                Explore Services
            </a>
        </div>
    </div>
</nav>

<script>
    const mobileMenuBtn = document.getElementById("mobile-menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");
    const menuLine1 = document.getElementById("menu-line-1");
    const menuLine2 = document.getElementById("menu-line-2");

    let isOpen = false;

    mobileMenuBtn?.addEventListener("click", () => {
        isOpen = !isOpen;
        mobileMenu?.classList.toggle("hidden", !isOpen);

        if (isOpen) {
            menuLine1?.classList.add("rotate-45", "translate-y-1");
            menuLine2?.classList.add("-rotate-45", "-translate-y-1");
        } else {
            menuLine1?.classList.remove("rotate-45", "translate-y-1");
            menuLine2?.classList.remove("-rotate-45", "-translate-y-1");
        }
    });

    // Close mobile menu when clicking a link
    const mobileLinks = mobileMenu?.querySelectorAll("a");
    mobileLinks?.forEach((link) => {
        link.addEventListener("click", () => {
            mobileMenu?.classList.add("hidden");
            isOpen = false;
            menuLine1?.classList.remove("rotate-45", "translate-y-1");
            menuLine2?.classList.remove("-rotate-45", "-translate-y-1");
        });
    });
</script>

<style>
    .font-display {
        font-family: var(--font-display);
    }

    .bg-accent {
        background-color: var(--accent);
    }
</style>
