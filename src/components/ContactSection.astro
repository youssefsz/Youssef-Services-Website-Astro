---
// Contact Section - Minimal dark form with centered header
---

<section class="py-32 relative" id="contact">
    <div class="container-main relative z-10">
        <!-- Section Header - Centered -->
        <div class="text-center mb-20">
            <div class="number-display mb-4">// 02</div>
            <h2 class="display-lg mb-6">
                <span class="block">Let's</span>
                <span class="text-outline">Talk</span>
            </h2>
            <p class="text-muted text-lg max-w-xl mx-auto">
                Have a project in mind? Let's discuss how I can help bring your
                vision to life.
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24">
            <!-- Left Column - Contact Info -->
            <div class="flex flex-col justify-center">
                <!-- Contact Info -->
                <div class="space-y-6">
                    <div class="flex items-center gap-4">
                        <div
                            class="w-12 h-12 border border-white/10 flex items-center justify-center"
                        >
                            <svg
                                class="w-5 h-5 text-muted"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="square"
                                    stroke-linejoin="miter"
                                    stroke-width="1.5"
                                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <div
                                class="text-xs uppercase tracking-wider text-muted mb-1"
                            >
                                Email
                            </div>
                            <a
                                href="mailto:contact@dhibi.tn"
                                class="text-white hover:text-accent transition-colors"
                                >contact@dhibi.tn</a
                            >
                        </div>
                    </div>

                    <div class="flex items-center gap-4">
                        <div
                            class="w-12 h-12 border border-white/10 flex items-center justify-center"
                        >
                            <svg
                                class="w-5 h-5 text-muted"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="square"
                                    stroke-linejoin="miter"
                                    stroke-width="1.5"
                                    d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <div
                                class="text-xs uppercase tracking-wider text-muted mb-1"
                            >
                                Website
                            </div>
                            <a
                                href="https://dhibi.tn"
                                target="_blank"
                                rel="noopener"
                                class="text-white hover:text-accent transition-colors"
                                >dhibi.tn</a
                            >
                        </div>
                    </div>

                    <div class="flex items-center gap-4">
                        <div
                            class="w-12 h-12 border border-white/10 flex items-center justify-center"
                        >
                            <svg
                                class="w-5 h-5 text-muted"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="square"
                                    stroke-linejoin="miter"
                                    stroke-width="1.5"
                                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                ></path>
                                <path
                                    stroke-linecap="square"
                                    stroke-linejoin="miter"
                                    stroke-width="1.5"
                                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                        </div>
                        <div>
                            <div
                                class="text-xs uppercase tracking-wider text-muted mb-1"
                            >
                                Location
                            </div>
                            <span class="text-white">Tunisia</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Form -->
            <div class="bg-card border border-white/5 p-8 lg:p-10">
                <form class="space-y-5" id="contact-form">
                    <div>
                        <label
                            for="name"
                            class="block text-xs uppercase tracking-wider text-muted mb-3"
                            >Name</label
                        >
                        <input
                            type="text"
                            id="name"
                            name="name"
                            required
                            class="input-dark"
                            placeholder="Your name"
                        />
                    </div>

                    <div>
                        <label
                            for="email"
                            class="block text-xs uppercase tracking-wider text-muted mb-3"
                            >Email</label
                        >
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            class="input-dark"
                            placeholder="your@email.com"
                        />
                    </div>

                    <div>
                        <label
                            for="message"
                            class="block text-xs uppercase tracking-wider text-muted mb-3"
                            >Message</label
                        >
                        <textarea
                            id="message"
                            name="message"
                            rows="4"
                            required
                            class="input-dark resize-none"
                            placeholder="Tell me about your project..."
                        ></textarea>
                    </div>

                    <button
                        type="submit"
                        class="btn-primary w-full"
                        id="contact-submit"
                    >
                        <span>Send Message</span>
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="square"
                                stroke-linejoin="miter"
                                stroke-width="2"
                                d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                        </svg>
                    </button>
                </form>

                <p class="text-xs text-muted text-center mt-5">
                    Typically respond within 24 hours
                </p>
            </div>
        </div>
    </div>

    <!-- Background Decoration -->
    <div
        class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-white/10 to-transparent"
    >
    </div>
</section>

<style>
    .bg-card {
        background-color: var(--card);
    }

    .text-accent {
        color: var(--accent);
    }
</style>
