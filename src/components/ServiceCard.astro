---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
    title: string;
    description: string;
    category: string;
    image: ImageMetadata;
    link?: string;
    index?: number;
}

const { title, description, category, image, link, index = 0 } = Astro.props;
---

<article class="service-card group">
    <!-- Image Container -->
    <div class="image-container">
        <Image src={image} alt={title} class="service-image" />
        <div class="image-overlay"></div>
    </div>

    <!-- Content -->
    <div class="card-content">
        <!-- Category Tag -->
        <div class="category-tag">
            {category}
        </div>

        <!-- Title -->
        <h3 class="card-title">
            {title}
        </h3>

        <!-- Description -->
        <p class="card-description">
            {description}
        </p>

        <!-- Action Link - Styled as Button -->
        <div class="mt-auto">
            {
                link ? (
                    <a
                        href={link}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="btn-secondary group"
                    >
                        <span>View Project</span>
                        <svg
                            class="w-4 h-4 transform group-hover:translate-x-1 transition-transform"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="square"
                                stroke-linejoin="miter"
                                stroke-width="2"
                                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                            />
                        </svg>
                    </a>
                ) : (
                    <a href="#contact" class="btn-secondary group">
                        <span>Learn More</span>
                        <svg
                            class="w-4 h-4 transform group-hover:translate-x-1 transition-transform"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="square"
                                stroke-linejoin="miter"
                                stroke-width="2"
                                d="M17 8l4 4m0 0l-4 4m4-4H3"
                            />
                        </svg>
                    </a>
                )
            }
        </div>
    </div>
</article>

<style>
    .service-card {
        position: relative;
        background: var(--card);
        border: 2px solid var(--border);
        overflow: hidden;
        transition: all 0.2s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
        box-shadow: 4px 4px 0 0 var(--foreground);
    }

    .service-card:hover {
        transform: translate(-4px, -4px);
        box-shadow: 8px 8px 0 0 var(--foreground);
    }

    /* Image Container */
    .image-container {
        position: relative;
        width: 100%;
        aspect-ratio: 16 / 10;
        overflow: hidden;
        border-bottom: 2px solid var(--border);
    }

    .service-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: transform 0.2s ease;
    }

    .service-card:hover .service-image {
        transform: scale(1.05);
    }

    .image-overlay {
        display: none;
    }

    /* Card Content */
    .card-content {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        flex: 1;
    }

    .category-tag {
        display: inline-block;
        font-family: var(--font-display);
        font-size: 0.75rem;
        font-weight: 700;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        color: var(--foreground);
        background: transparent;
        padding: 0.25rem 0.5rem;
        border: 2px solid var(--border);
        width: fit-content;
        margin-bottom: 1rem;
    }

    .card-title {
        font-family: var(--font-display);
        font-weight: 800;
        font-size: 1.5rem;
        letter-spacing: -0.03em;
        color: var(--foreground);
        margin-bottom: 0.75rem;
        text-transform: uppercase;
    }

    .service-card:hover .card-title {
        text-decoration: underline;
        text-decoration-thickness: 3px;
    }

    .card-description {
        font-size: 1rem;
        line-height: 1.5;
        color: var(--foreground);
        margin-bottom: 1.5rem;
        flex: 1;
        font-weight: 500;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .card-content {
            padding: 1.25rem;
        }
    }
</style>
