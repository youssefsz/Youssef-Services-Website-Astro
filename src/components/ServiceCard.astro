---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
    title: string;
    description: string;
    category: string;
    image: ImageMetadata;
    link?: string;
    index?: number;
}

const { title, description, category, image, link, index = 0 } = Astro.props;
---

<article class="service-card group">
    <!-- Image Container -->
    <div class="image-container">
        <Image src={image} alt={title} class="service-image" />
        <div class="image-overlay"></div>
    </div>

    <!-- Content -->
    <div class="card-content">
        <!-- Category Tag -->
        <div class="category-tag">
            {category}
        </div>

        <!-- Title -->
        <h3 class="card-title">
            {title}
        </h3>

        <!-- Description -->
        <p class="card-description">
            {description}
        </p>

        <!-- Action Link - Styled as Button -->
        <div class="mt-auto">
            {
                link ? (
                    <a
                        href={link}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="btn-secondary group"
                    >
                        <span>View Project</span>
                        <svg
                            class="w-4 h-4 transform group-hover:translate-x-1 transition-transform"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="square"
                                stroke-linejoin="miter"
                                stroke-width="2"
                                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                            />
                        </svg>
                    </a>
                ) : (
                    <a href="#contact" class="btn-secondary group">
                        <span>Learn More</span>
                        <svg
                            class="w-4 h-4 transform group-hover:translate-x-1 transition-transform"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="square"
                                stroke-linejoin="miter"
                                stroke-width="2"
                                d="M17 8l4 4m0 0l-4 4m4-4H3"
                            />
                        </svg>
                    </a>
                )
            }
        </div>
    </div>
</article>

<style>
    .service-card {
        position: relative;
        background: linear-gradient(
            135deg,
            rgba(255, 255, 255, 0.08) 0%,
            rgba(255, 255, 255, 0.04) 100%
        );
        border: 1px solid rgba(255, 255, 255, 0.12);
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .service-card:hover {
        background: linear-gradient(
            135deg,
            rgba(255, 255, 255, 0.12) 0%,
            rgba(255, 255, 255, 0.06) 100%
        );
        border-color: rgba(255, 255, 255, 0.25);
        transform: translateY(-4px);
    }

    /* Image Container */
    .image-container {
        position: relative;
        width: 100%;
        aspect-ratio: 16 / 10;
        overflow: hidden;
        background: linear-gradient(
            135deg,
            rgba(0, 0, 0, 0.4) 0%,
            rgba(0, 0, 0, 0.2) 100%
        );
    }

    .service-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .service-card:hover .service-image {
        transform: scale(1.05);
    }

    .image-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            to top,
            rgba(0, 0, 0, 0.6) 0%,
            rgba(0, 0, 0, 0) 60%
        );
        pointer-events: none;
    }

    /* Card Content */
    .card-content {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        flex: 1;
    }

    .category-tag {
        display: inline-block;
        font-size: 0.65rem;
        font-weight: 500;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: var(--accent);
        background: rgba(255, 255, 255, 0.05);
        padding: 0.35rem 0.75rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        width: fit-content;
        margin-bottom: 1rem;
    }

    .card-title {
        font-family: var(--font-display);
        font-weight: 700;
        font-size: 1.5rem;
        letter-spacing: -0.02em;
        color: white;
        margin-bottom: 0.75rem;
        transition: color 0.3s ease;
    }

    .service-card:hover .card-title {
        color: var(--accent);
    }

    .card-description {
        font-size: 0.9rem;
        line-height: 1.7;
        color: var(--text-muted);
        margin-bottom: 1.5rem;
        flex: 1;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .card-content {
            padding: 1.25rem;
        }

        .card-title {
            font-size: 1.25rem;
        }
    }
</style>
