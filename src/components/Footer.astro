<style>
    .footer-name {
        font-family: var(--font-display);
    }

    /* Wrapper for layered text effect */
    .name-wrapper {
        position: relative;
        display: inline-block;
    }

    /* Outline version - visible by default */
    .name-outline {
        -webkit-text-stroke: 1px var(--foreground);
        -webkit-text-fill-color: transparent;
        transition: opacity 0.4s ease;
    }

    /* Filled version - hidden by default, positioned on top */
    .name-filled {
        position: absolute;
        left: 0;
        top: 0;
        color: var(--accent);
        opacity: 0;
        transition: opacity 0.4s ease;
    }

    /* On hover: fade out outline, fade in filled */
    .group:hover .name-outline {
        opacity: 0;
    }

    .group:hover .name-filled {
        opacity: 1;
    }

    .text-accent {
        color: var(--accent);
    }

    .border-accent {
        border-color: var(--accent);
    }

    .hover\:border-accent:hover {
        border-color: var(--accent);
    }

    .hover\:text-accent:hover {
        color: var(--accent);
    }
</style>
