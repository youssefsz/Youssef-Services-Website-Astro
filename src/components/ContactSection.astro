---
// Contact Section - Simple CTA buttons
const email = "contact@dhibi.tn";
const phone = "+216 XX XXX XXX"; // Update with your actual phone
const portfolioUrl = "https://youssef.tn";
---

<section class="py-32 relative" id="contact">
    <div class="container-main relative z-10">
        <!-- Section Header - Centered -->
        <div class="text-center mb-16">
            <div class="number-display mb-4">// 02</div>
            <h2 class="display-lg mb-6">
                <span class="block">Get In</span>
                <span class="text-outline-hover">
                    <span class="outline-text">Touch</span>
                    <span class="filled-text" aria-hidden="true">Touch</span>
                </span>
            </h2>
            <p class="text-muted text-lg max-w-xl mx-auto">
                Ready to get started? Reach out through any of these channels.
            </p>
        </div>

        <!-- Contact CTAs -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 max-w-4xl mx-auto">
            <!-- Email CTA -->
            <a
                href={`mailto:${email}`}
                class="contact-card group"
                id="contact-email"
            >
                <div class="contact-icon">
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="square"
                            stroke-linejoin="miter"
                            stroke-width="1.5"
                            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                        ></path>
                    </svg>
                </div>
                <div class="text-xs uppercase tracking-wider text-muted mb-2">
                    Email
                </div>
                <div
                    class="text-white font-medium group-hover:text-accent transition-colors"
                >
                    {email}
                </div>
            </a>

            <!-- Phone CTA -->
            <a
                href={`tel:${phone.replace(/\s/g, "")}`}
                class="contact-card group"
                id="contact-phone"
            >
                <div class="contact-icon">
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="square"
                            stroke-linejoin="miter"
                            stroke-width="1.5"
                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                        ></path>
                    </svg>
                </div>
                <div class="text-xs uppercase tracking-wider text-muted mb-2">
                    Phone
                </div>
                <div
                    class="text-white font-medium group-hover:text-accent transition-colors"
                >
                    {phone}
                </div>
            </a>

            <!-- Portfolio CTA -->
            <a
                href={portfolioUrl}
                target="_blank"
                rel="noopener"
                class="contact-card group"
                id="contact-portfolio"
            >
                <div class="contact-icon">
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="square"
                            stroke-linejoin="miter"
                            stroke-width="1.5"
                            d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                        ></path>
                    </svg>
                </div>
                <div class="text-xs uppercase tracking-wider text-muted mb-2">
                    Portfolio
                </div>
                <div
                    class="text-white font-medium group-hover:text-accent transition-colors flex items-center gap-2"
                >
                    Visit Website
                    <svg
                        class="w-4 h-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="square"
                            stroke-linejoin="miter"
                            stroke-width="2"
                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                        ></path>
                    </svg>
                </div>
            </a>
        </div>
    </div>

    <!-- Background Decoration -->
    <div
        class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-white/10 to-transparent"
    >
    </div>
</section>

<style>
    .contact-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 2.5rem 2rem;
        background: var(--card);
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: all 0.3s ease;
    }

    .contact-card:hover {
        border-color: rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.02);
    }

    .contact-icon {
        width: 3.5rem;
        height: 3.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 1.5rem;
        color: var(--muted-foreground);
        transition: all 0.3s ease;
    }

    .contact-card:hover .contact-icon {
        border-color: var(--accent);
        color: var(--accent);
    }

    .text-accent {
        color: var(--accent);
    }
</style>
